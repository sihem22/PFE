{% extends ":back:login.html.twig" %}


{% block body %}
    <body class="login example2">
        <div class="main-login col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <div class="logo"><font color='black'>Small-Jobs-Mall </font>
            </div>
            <!-- start: LOGIN BOX -->
            <div class="box-login">
                <h3> <font color='black'><b> Connectez-vous à votre compte </b></font></h3>
                <p>
                    <b>  Entrez votre mot de passe et votre nom d'utilisateur pour se connecter . </b>
                </p>
                {% trans_default_domain 'FOSUserBundle' %}

                {% block fos_user_content %}
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}



                    <div class="errorHandler alert alert-danger no-display">
                        <i class="fa fa-remove-sign"></i> Vous avez des erreurs , veuillez les vérifier s'il vous plaît.
                    </div>
                    <fieldset>


                        <form  class="form-login"  action="{{ path("fos_user_security_check") }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <div class="form-group">      
                                <label for="username" value="{{'security.login.username'|trans }}" ><b><font color='black'>Nom d'utilisateur</font></b>  </label>
                                <span class="input-icon">
                                    <i class="fa fa-user"></i>
                                    <input type="text"  class="form-control username" name="_username"  placeholder="Nom d'utilisateur" value="{{ last_username }}" required="required" />
                                </span>     
                            </div>
                            <div class="form-group">
                                <label for="password"  value="{{ 'security.login.password'|trans }}"><b><font color='black'>Mot de passe </font></b> </label>
                                    <span class="input-icon">
                                        <i class="fa fa-lock"></i>
                                        <input type="password" class="form-control password" id="password"  placeholder="Mot de passe" name="_password" required="required">
                                    </span>
                            </div>

                            <div class="form-actions">
                                

                                <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  class="btn btn-blue pull-right">
                                   Connexion <i class="fa fa-arrow-circle-right"></i>

                                </button>
                                <div align="left"> <a href="{{path('sign_up')}}"> <b>si vous n'avez pas de compte inscrivez-vous ici </b></a></div>
                            </div> 
                        </form>
                    </fieldset>


                </div>

            {% endblock fos_user_content %}
        </div>
        
        
{% endblock %}

